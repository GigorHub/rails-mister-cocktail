<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1>All Cocktails</h1>
      <p><%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-primary" %></p>
      <ul>
        <% @cocktails.each do |cocktail| %>
        <li><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-9">
      <h1>All Cocktails</h1>
      <p><%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-primary" %></p>
      <div class="row">
          <div class="cards">
            <% @cocktails.each do |cocktail| %>
              <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/800x450/?cocktail)">
                <%= link_to cocktail.name, cocktail_path(cocktail) %>
              </div>
            <% end %>
          </div>
      </div>
     </div>
  </div>
</div>

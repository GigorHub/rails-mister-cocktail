<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <h1><%= @cocktail.name %></h2>
      <p><%= @cocktail.name %></p>
      <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item"><%= dose.description %>
            | <%= Ingredient.find(dose.ingredient_id).name %>
            | <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
        <% end %>
      </ul>
      <hr>
      <%= link_to 'Back', cocktails_path, class: "btn btn-primary" %> |
      <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
      <hr>

